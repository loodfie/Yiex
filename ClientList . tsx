import React from 'react';
import { User, Phone } from 'lucide-react';

const ClientList = ({ clients }: any) => (
  <div className="grid grid-cols-1 md:grid-cols-3 gap-4">
    {clients.map((c: any) => (
      <div key={c.id} className="bg-white p-6 rounded-2xl border shadow-sm">
        <h4 className="font-bold flex items-center gap-2"><User size={18}/> {c.name}</h4>
        <p className="text-sm text-gray-500">{c.nik}</p>
        <p className="text-sm mt-2 flex items-center gap-2"><Phone size={14}/> {c.phone}</p>
      </div>
    ))}
  </div>
);
export default ClientList;